
<div class="card-css">
  <%= link_to song_path(song) do %>
    <div class="col-xs-12 col-sm-6 col-md-4">
       <div class="card grow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path song.photo%>'); background-size: cover">
        <div class="card-content">
          <div class="card-category">
            <%= song.name %>
          </div>
        <div class="card-content">
          <div class="card-category">
            <%= song.user.username %> <span>(<%= song.bpm %>)</span>
          </div>
          <div class="card-description">
            <%= song.duration %>
            <%= song.genre.name%>
          </div>
          <div class="card-avatar"><%= cl_image_tag(song.user.photo, :width => 60, :height => 60, crop: 'fill', class: 'img-circle') %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>




<div class="container">
  <h1><%= @song.name %></h1>
  <div>
    <p>A project by <%= @song.user["first_name"] %> <%= @song.user["last_name"] %></p>
    <p class="track-metadata">Made with <i class="fas fa-heart"></i> at <%= @song.bpm %> bpm | <i class="fas fa-clock"></i> <%= @minutes %>:<%= @seconds %> | <i class="fas fa-music"></i> <%= @song.genre.name %></p>
  </div>

  <div class="container player-container">
    <button class="btn btn-primary" id="play" disabled>Play</button>
    <button class="btn btn-info" id="clear">Solo Clear</button>
    <div class="tracks-container">
      <div class="playhead-container">
        <div id="playhead"></div>
      </div>
      <ul class="tracks list-unstyled" id="track-container">
        <% @song.tracks.each do |track| %>
          <li data-url=<%= track["track_url"] %> data-name=<%= track.description %>><button class="mute">mute</button><button class="solo">solo</button><canvas class="waveform" width="700px" height="75"></canvas></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
